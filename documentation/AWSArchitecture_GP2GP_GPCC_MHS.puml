fargate --up--> cwep
cwep --up--> cw
fargate --up--> ecrVPC
ecrVPC --up-->ecr
routeLB --> rTask

rTask --down--> redis
ep --up--> gp2gpDb
ep --up--> stateDb
ep --up--> syncDb

iTask --up--> ep
outboundLB --up--> oTask
gpccLB --up--> gpccTask
inboundLB --up--> iTask
