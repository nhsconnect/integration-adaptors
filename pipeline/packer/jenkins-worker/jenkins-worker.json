{
  "_description": "This template produces a Jenkins worker.",
 "variables": {
    "repository": "{{env `DOCKER_REPOSITORY`}}",
    "tag": "{{env `BUILD_TAG`}}",
    "docker_registry_url": "{{env `DOCKER_REGISTRY_URL`}}"
  },
  "builders": [
    {
      "type": "docker",
      "image": "temporary/jenkins-worker:latest",
      "pull": false,
      "commit": true,
      "changes": [
        "ENTRYPOINT [\"jenkins-slave\"]"
      ]
    }
  ],
  "provisioners": [
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `repository`}}",
        "tag": "{{user `tag`}}"
      },
      {
        "type": "docker-push",
        "ecr_login": true,
        "login_server": "{{user `docker_registry_url`}}"
      }
    ]
  ]
}
